        <ejb-link>bookstore-ejb.jar#CustomerEOFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>bookEOFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>sessions.bookEOFacadeLocal</local>
        <ejb-link>bookstore-ejb.jar#bookEOFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>cartEOFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>sessions.cartEOFacadeLocal</local>
        <ejb-link>bookstore-ejb.jar#cartEOFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>CategoryEOFacade1</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>sessions.CategoryEOFacadeLocal</local>
        <ejb-link>bookstore-ejb.jar#CategoryEOFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>cartEOFacade1</ejb-ref-name>
