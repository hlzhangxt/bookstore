<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <ejb-local-ref>
        <ejb-ref-name>CategoryEOFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>sessions.CategoryEOFacadeLocal</local>
        <ejb-link>bookstore-ejb.jar#CategoryEOFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>CustomerEOFacade</ejb-ref-name>
